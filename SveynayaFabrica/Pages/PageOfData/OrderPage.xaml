<Page x:Class="SveynayaFabrica.Pages.PageOfData.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SveynayaFabrica.Pages.PageOfData"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderPage">

    <Grid>
        <DataGrid x:Name="dgOrder" 
          Grid.Row="1"
          Loaded="DataLoaded">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Цена" 
                            Binding="{Binding Price}"/>
                <DataGridTextColumn Header="Дата" 
                            Binding="{Binding Date}"/>
                <DataGridTextColumn Header="Статус" 
                            Binding="{Binding OrderState.Name}"/>
                <DataGridTextColumn Header="Менеджер" 
                            Binding="{Binding User.Login}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
