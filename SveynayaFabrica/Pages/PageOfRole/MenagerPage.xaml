<Page x:Class="SveynayaFabrica.MenagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SveynayaFabrica"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenagerPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Страница менеджера"
               FontSize="30"
               Grid.ColumnSpan="2"/>
        <Frame x:Name="menegerFrame" Grid.Row="1"
               Grid.Column="1"
               Source="../PageOfData/ProductPage.xaml"/>
        <StackPanel Grid.Row="1"
                    Grid.Column="0">
            <Label Content="Меню"/>
            <Button Content="Продукты" 
                    Click="GoToProduct"/>
            <Button Content="Заказы" 
                    Click="GoToOrder"/>
            <Button Content="Добавить заказ"
                    Click="AddOrder"/>
        </StackPanel>
    </Grid>
</Page>
