<Page x:Class="SveynayaFabrica.EntrancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SveynayaFabrica"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EntrancePage">
    
    <Grid>
        
        <Border Style="{StaticResource border-form}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            
        
        <StackPanel>
            <Label Content="Вход" Style="{StaticResource discharge}"/>
            <Label Content="Логин"/>
            <TextBox x:Name="tboxLogin"/>
            <Label Content="Пароль"/>
                <PasswordBox x:Name="tboxPassword"/>
            <Button Content="Войти" Click="Button_Click"/>
                <Button Content="Регистрация" Click="Button_Click_1"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
